<div class="container my-5">
  <div class="card shadow-lg border-0">
    <div class="card-header bg-primary text-white text-center">
      <h1 class="display-5 fw-bold">
        <%= @friend.first_name.capitalize %> <%= @friend.last_name.capitalize %>
      </h1>
    </div>

    <div class="card-body text-center p-4">
      <p class="lead text-muted">
        <i class="bi bi-envelope-fill"></i> <%= @friend.email %><br>
        <i class="bi bi-telephone-fill"></i> <%= @friend.phone %><br>
        <% if @friend.twitter.present? %>
        <i class="bi bi-twitter"></i>
        <a href="https://twitter.com/<%= @friend.twitter %>" target="_blank" class="text-info">@<%= @friend.twitter %></a>
        <% else %>
        <i class="bi bi-twitter"></i> <span class="text-muted">NÃ£o informado</span>
        <% end %>
      </p>
    </div>

    <div class="card-footer text-center">
      <%= link_to "Editar", edit_friend_path(@friend), class: "btn btn-warning me-2" %>
      <%= link_to "Voltar", friends_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>